var sum_to_n_a = function(n) {
    // Method 1: Mathematical Formula (Arithmetic Progression)
    // Time Complexity: O(1) - Most efficient
    // This uses the formula: (n * (n + 1)) / 2
    return (n * (n + 1)) / 2;
};

var sum_to_n_b = function(n) {
    // Method 2: Iterative Approach (For Loop)
    // Time Complexity: O(n) - Linear time
    // We manually add numbers from 1 up to n using a loop.
    var sum = 0;
    for (var i = 1; i <= n; i++) {
        sum += i;
    }
    return sum;
};

var sum_to_n_c = function(n) {
    // Method 3: Recursive Approach
    // Time Complexity: O(n) - Linear time (but uses stack memory)
    // The function calls itself until it reaches the base case.
    if (n <= 1) {
        return n;
    }
    return n + sum_to_n_c(n - 1);
};
